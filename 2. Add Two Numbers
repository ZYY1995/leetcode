# Definition for singly-linked list.
# class ListNode(object):
#     def __init__(self, x):
#         self.val = x
#         self.next = None

class Solution(object):
    def addTwoNumbers(self, l1, l2):
        """
        :type l1: ListNode
        :type l2: ListNode
        :rtype: ListNode
        """
        result = ListNode(0)
        curr = result
        
        tmp = 0
        while(not l1 == None or not l2 == None):
            if l1 == None:
                tmp = l2.val + tmp
            elif l2 == None:
                tmp = l1.val + tmp
            else:
                tmp = l1.val + l2.val + tmp
                
            l1.val = tmp % 10
            l2.val = l1.val
            if not l1 == None:
                l1 = l1.next
            if not l2 == None:
                l2 = l2.next
            l1 = l1.next
            l2 = l2.next
            tmp = tmp // 10
        if tmp == 1:
                pre_node.next = ListNode(1)
